<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/background"

    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <include
        layout="@layout/toolbar"

        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/maintext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="132dp"
        android:layout_marginBottom="568dp"
        android:fontFamily="monospace"
        android:text="Add items"
        android:textColor="#ff6347"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_marginStart="135dp"
        android:layout_marginEnd="135dp"
        android:layout_marginBottom="104dp"
        android:backgroundTint="@color/mainColor"
        android:fontFamily="monospace"
        android:text="Add to model"
        android:textAllCaps="false"
        android:textColor="#ffffff"

        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="401dp"
        android:layout_height="56dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="206dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColorHint="@color/mainColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/editTextTextName"
            android:layout_width="268dp"
            android:layout_height="match_parent"

            android:layout_marginStart="60dp"
            android:background="@color/dialog_white"
            android:ems="10"
            android:fontFamily="monospace"
            android:hint="@string/itemNamehint"

            android:inputType="textPersonName"


            android:textSize="19sp"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="221dp" />


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="401dp"
        android:layout_height="56dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="288dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColorHint="@color/mainColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <EditText
            android:id="@+id/editTextTextPersonName2"
            android:layout_width="268dp"
            android:layout_height="match_parent"
            android:layout_marginStart="60dp"
            android:background="@color/dialog_white"
            android:ems="10"
            android:fontFamily="monospace"
            android:hint="@string/itemSizehint"
            android:inputType="textPersonName"
            android:textSize="19sp"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="221dp"

            />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="402dp"
        android:layout_height="56dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="368dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColorHint="@color/mainColor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="266dp"
            android:layout_height="match_parent"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="72dp"
            android:background="@color/dialog_white"
            android:ems="10"
            android:fontFamily="monospace"
            android:hint="@string/datehint"
            android:inputType="date"
            android:textColorHighlight="#232121"
            android:textColorLink="#5E5858"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteY="369dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="416dp"
        android:layout_height="66dp"
        android:layout_gravity="end|bottom"
        android:layout_marginTop="668dp"
        android:layout_marginBottom="4dp"
        android:background="@color/background"
        app:itemIconTint="@drawable/selector"
        app:itemRippleColor="@color/mainColor"
        app:itemTextColor="@drawable/selector"
        app:layout_constraintBottom_toTopOf="@+id/include"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:menu="@menu/menu_navigation">


    </com.google.android.material.bottomnavigation.BottomNavigationView>

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="163dp"
        android:layout_marginTop="523dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:layout_width="287dp"
        android:layout_height="60dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="470dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:text="Before 2 weeks" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:text="before month" />
    </RadioGroup>


</androidx.constraintlayout.widget.ConstraintLayout>